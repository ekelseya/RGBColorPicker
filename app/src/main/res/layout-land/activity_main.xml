<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.rgbcolorpicker.MainActivity">
    <ImageView
            android:layout_width="335dp"
            android:layout_height="300dp" app:srcCompat="@color/colorNull"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:contentDescription="@string/colorview" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <SeekBar
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:id="@+id/seekBarRed"
            android:thumbTint="@color/red"
            android:progressTint="@color/red"
            android:max="255"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:inputType="number"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBarA" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.87" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/editTextRed"
            android:inputType="number"
            android:text="0"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextA" android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/seekBarRed" app:layout_constraintHorizontal_bias="0.6"/>
    <SeekBar
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:id="@+id/seekBarGreen"
            android:thumbTint="@color/green"
            android:progressTint="@color/green"
            android:max="255"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBarRed" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextGreen"
            android:text="0" android:textSize="14sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextRed" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toEndOf="@+id/seekBarGreen"/>
    <SeekBar
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:id="@+id/seekBarBlue"
            android:thumbTint="@color/blue"
            android:progressTint="@color/blue"
            android:max="255"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBarGreen" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.87" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextBlue"
            android:text="0" android:textSize="14sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextGreen" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/seekBarBlue" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <SeekBar
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:id="@+id/seekBarA"
            android:thumbTint="@color/grey"
            android:progressTint="@color/grey"
            android:max="255" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.869" android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextA"
            android:text="0" android:textSize="14sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/seekBarA" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginTop="76dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.583"/>
</android.support.constraint.ConstraintLayout>